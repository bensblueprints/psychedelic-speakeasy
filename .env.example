# Database Configuration (Netlify Neon / Supabase / PostgreSQL)
# For Netlify Neon: automatically provided when using Netlify's database
# For Supabase: use your connection string from Project Settings > Database
NETLIFY_DATABASE_URL=postgresql://user:password@host:5432/database

# Application Security
JWT_SECRET=your_jwt_secret_key_min_32_chars

# Application ID
VITE_APP_ID=psychedelic-speakeasy

# Owner OpenID (optional - for automatic admin role assignment)
OWNER_OPEN_ID=your_owner_open_id

# SendLane Email Integration (optional)
SENDLANE_API_KEY=your_sendlane_api_key

# Airwallex Payment Integration (optional)
AIRWALLEX_CLIENT_ID=your_airwallex_client_id
AIRWALLEX_API_KEY=your_airwallex_api_key
AIRWALLEX_ENV=demo

# Stripe Payment Integration (optional)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
